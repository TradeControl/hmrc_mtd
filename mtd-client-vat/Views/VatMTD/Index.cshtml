<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">api-example-dotnet-client</a>
                </div>
            </div>
        </nav>

        <h1>Testing @ViewData["service"] API</h1>

        <div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Endpoint</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@ViewData["service"]</td>
                        <td>Authorise service</td>
                        <td>
                            <a class="btn btn-primary" href="VatMTD/ChallangeCall">Try it</a>
                        </td>
                    </tr>
                    <tr>
                        <td>@ViewData["vatObligationsEndpoint"]</td>
                        <td>Retrieve Vat Obligations</td>
                        <td>
                            <a class="btn btn-primary" href="VatMTD/vatObligationsCall">Try it</a>
                        </td>
                    </tr>
                    <tr>
                        <td>@ViewData["vatViewReturnEndpoint"]</td>
                        <td>View Vat Return</td>
                        <td>
                            <a class="btn btn-primary" href="VatMTD/VatViewReturnCall">Try it</a>
                        </td>
                    </tr>
                    <tr>
                        <td>@ViewData["vatLiabilitiesEndpoint"]</td>
                        <td>Retrieve Vat Liabilities</td>
                        <td>
                            <a class="btn btn-primary" href="VatMTD/VatLiabilitiesCall">Try it</a>
                        </td>
                    </tr>
                    <tr>
                        <td>@ViewData["vatReturnsEndpoint"]</td>
                        <td>Send Vat Return</td>
                        <td>
                            <a class="btn btn-primary" href="VatMTD/VatReturnCall">Try it</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>